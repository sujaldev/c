{% extends "base.jinja" %}
{% block head %}
    <style>
        #listing {
            margin: 40px 0;
            display: flex;
            flex-wrap: wrap;
        }

        #listing > a {
            color: inherit;
            text-align: center;
            text-decoration: none;
            flex: 35%;
            padding: 50px 30px;
            margin: 5px;
            border: 1px solid #005FA0;
            border-radius: 5px;
            background: #151515;
            box-shadow: 0 0 5px 2px rgba(0, 95, 150, 0.5);
            font-weight: bold;
        }
    </style>
{% endblock %}
{% block content %}
    <div id="listing">
        {% for dir_path, dir_name in directories.items() %}
            <a href="/{{ dir_path.strip("/") }}/">{{ dir_name }}</a>
        {% endfor %}
    </div>
{% endblock %}