{% extends "base.jinja" %}
{% block head %}
    <style>
        .listing {
            display: flex;
            flex-wrap: wrap;
            padding: 0;
        }

        .listing > a {
            text-decoration: none;
            background: hsl(220, 16%, 14%);
            color: inherit;
            flex: 45%;
            padding: 20px;
            margin: 10px;
            border: 1px solid hsl(220, 16%, 35%);
            border-radius: 10px;
            box-shadow: 5px 5px 10px 5px rgba(0, 0, 0, 0.5);
        }
    </style>
{% endblock %}
{% block content %}
    <div class="listing">
        {% for url_path, url_text in files.items() %}
            <a href="{{ url_path }}">{{ url_text }}</a>
        {% endfor %}
    </div>
{% endblock %}